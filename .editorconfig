# EditorConfig for Men's Circle Management Platform
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files (.py, .pyi)
[*.{py,pyi}]
indent_size = 4
max_line_length = 88  # Black formatter default
quote_type = double

# Python configuration files
[{pyproject.toml,setup.py,setup.cfg,tox.ini,conftest.py}]
indent_size = 4

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# React component files
[*.{tsx,jsx}]
indent_size = 2
max_line_length = 100

# YAML files (Docker Compose, GitHub Actions, etc.)
[*.{yml,yaml}]
indent_size = 2

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# XML files
[*.{xml,xsl,xslt,svg}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Environment files
[{.env*,*.env}]
indent_size = 2

# Package manager files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Python requirements files
[{requirements*.txt,constraints*.txt,pip.conf}]
indent_size = 2

# Git configuration
[{.gitignore,.gitattributes,.gitmodules}]
indent_size = 2

# CI/CD configuration files
[{.github/**/*.yml,.github/**/*.yaml}]
indent_size = 2

# Docker Compose files
[{docker-compose*.yml,docker-compose*.yaml}]
indent_size = 2

# Prettier configuration (if used)
[{.prettierrc,.prettierrc.json,.prettierrc.yml,.prettierrc.yaml}]
indent_size = 2

# ESLint configuration
[{.eslintrc,.eslintrc.json,.eslintrc.yml,.eslintrc.yaml,.eslintrc.js}]
indent_size = 2

# TypeScript configuration
[{tsconfig*.json,jsconfig*.json}]
indent_size = 2

# Vite configuration
[{vite.config.*,vitest.config.*}]
indent_size = 2

# Jest configuration
[{jest.config.*,.jestrc*}]
indent_size = 2

# Pytest configuration
[{pytest.ini,tox.ini,.coveragerc}]
indent_size = 4

# Make files
[{Makefile,makefile,*.mk}]
indent_style = tab

# Binary files (no formatting)
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot,webp,pdf,zip,tar,gz,bz2}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# Certificate and key files (no formatting)
[*.{pem,crt,key,cer,der,p12,pfx}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# Log files (preserve formatting)
[*.{log,logs}]
trim_trailing_whitespace = false
insert_final_newline = false

# Data files (preserve formatting)
[*.{csv,tsv,jsonl,ndjson}]
trim_trailing_whitespace = false

# Men's Circle Platform specific files
[{circle-config.yml,platform-config.yml,deployment-config.yml}]
indent_size = 2

# Redis configuration
[redis.conf]
indent_size = 2

# PostgreSQL configuration
[*.{postgresql.conf,pg_hba.conf}]
indent_size = 2

# Nginx configuration
[{nginx.conf,*.nginx}]
indent_size = 2 